extends ../node_modules/jade-bootstrap/_bootstrap
append styles
        link(href='/stylesheets/signup.css', rel='stylesheet')
       

        script(src='/javascripts/jquery.js', type='text/javascript')
        script(src='/javascripts/signup.js', type='text/javascript')
        script(src='/javascripts/rent.js', type='text/javascript')


block body
        span.username(style="display:none") #{name}
        span.userid(style="display:none") #{idcard}
        //-var name=result.name
        //-var idcard=result.idcard
        .site-wrapper
                .site-wrapper-inner
                        .cover-container
                                .masthead.clearfix
                                        .inner
                                                h3.masthead-brand FabHouse
                                                nav
                                                        ul.nav.masthead-nav
                                                                li
                                                                        a(href="/") 主页
                                                                li.active
                                                                        a(href="/signuphouse") 注册房屋
                                                                //li
                                                                        a(href="/lease") 全部房屋列表
                                                                li
                                                                        a(href="#") 关于
 
        .container
                div.form-signin(style="margin-top:150px")
                        h2.form-signin-heading(style="font-size:18px;font-weight:lighter") 房屋注册
                        form#signupform(action='/signuphouseService', method='post')
                                input#inputID.signupinput(type='text',placeholder='房屋号码:范围：1000-1999',name='id')
                                input#inputArea.signupinput(type='text', placeholder='面积',name='area')
                                input#inputStatus.signupinput(type='text', placeholder='状态',name='status')
                                input#inputOwner.signupinput(type='text', placeholder='持有者',name='owner')
                                input#inputUser.signupinput(type='text', placeholder='使用者',name='user')
                                        
                                button.btn.btn-lg.btn-primary.btn-block(type='submit') 注册房屋
                        //-var name=result.name
                        //form#queryhouseform(action='/queryhousebyownerService?name='+name, method='post')
                                button.btn.btn-lg.btn-primary.btn-block(type='submit') 查询房屋
                       
