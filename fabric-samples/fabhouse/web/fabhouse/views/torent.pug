extends layout

append styles
    link(rel='stylesheet', href='/stylesheets/torent.css')
    link(rel='stylesheet', href='/stylesheets/rent.css')

append scripts
    script(src='/javascripts/jquery.js', type='text/javascript')
    
    //script(src='/javascripts/signup.js', type='text/javascript')
    script(src='/javascripts/torent.js', type='text/javascript')
    script(src='/javascripts/rent.js', type='text/javascript')

block content
    span.username(style="display:none") #{result.name}
    span.userid(style="display:none") #{result.idcard}
    nav.navbar.fixed-top.navbar-light.bg-light
        a.navbar-brand(href="/") FabHouse
        div.welcome 欢迎您， #{result.name}
        //button.myrent.btn.btn-outline-info(onclick="tomyrent()") 我的租房

      
    .container(style="margin: 150px 600px")
        div.bigbutton.create(style="background:#7A74C3",onclick="mycreate()")
            img.cimg(src='/images/plus.png')
            span#btncreate.btntitle 注册房屋
        div.bigbutton.query(style="background:#00A589",onclick="myquery()")
            img.cimg(src='/images/query.png')
            span#btnquery.btntitle 查看房屋
        div.bigbutton.contract(style="background:#60B9FF",onclick="toownerrent()")
            img.cimg(src='/images/house.png')
            span#btncontract.btntitle 我的出租
